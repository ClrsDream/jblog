<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xiaoteng.blog.mappers.PermissionMapper">

    <sql id="columns">id,name, http_method, uri, frontend_node</sql>

    <insert id="insert" parameterType="Permission" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO permissions (name, http_method, uri, frontend_node) values (#{name}, #{httpMethod},#{uri},#{frontendNode});
    </insert>

    <select id="all" resultType="Permission">
        select
        <include refid="columns" />
        from permissions
    </select>

    <delete id="delete">
        delete from permissions where id = #{id}
    </delete>

</mapper>